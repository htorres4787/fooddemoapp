<html>
<head>
<style>

 body {
  background-color: coral;
 }

 </style>
 </head>

<div>
  <div>
    <h1>
      List of all reviews
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new review
    </h2>

    <form action="/insert_review" method="post">

      <div>
        <label for="food_id_box">
          Food
        </label>

        <input type="text" id="food_id_box" name="query_food_id">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <input type="text" id="body_box" name="query_body">
      </div>

      <div>
        <label for="restaurant_id_box">
          Restaurant
        </label>

        <select id="restaurant_id_box" class="form-select" aria-label="Select restaurant" name="query_restaurant_id">
          <option selected>Open this select menu</option>
          <% @list_of_restaurants.each do |restaurant| %>
            <option value="<%= restaurant.id %>"><%= restaurant.name %></option>
          <% end %>
        </select>
      </div>

      <button>
        Create review
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table table-bordered">
      <tr>

        <th>
          Food
        </th>

        <th>
          Body
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_reviews.each do |a_review| %>
      <tr>

        <td>
          <%= a_review.food_id %>
        </td>

        <td>
          <%= a_review.body %>
        </td>

        <td>
          <%= a_review.restaurant_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_review.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_review.updated_at) %> ago
        </td>

        <td>
          <a href="/reviews/<%= a_review.id %>">
            Show details
          </a>
        </td>
        
        <td>
          <%#a href %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

</body>
</html>
