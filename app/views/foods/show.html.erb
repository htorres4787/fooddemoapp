<div class="container">
  <div>
    <h1>
      <%= @the_food.name %> details
    </h1>

    <div>
      <div>
        <a href="/foods">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_food/<%= @the_food.id %>">
          Delete food
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_food.name %>
      </dd>

      <dt>
        Opinion/Extra Thoughts
      </dt>
      <dd>
        <%= @the_food.opinion %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_food.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<h3>Associated restaurant towards this food.</h3>

<% @the_food.restaurant.distinct(:id).each do |restaurant| %>
  <p><%= restaurant.name %></p>
<% end %>

<hr>

<div>
  <div>
    <h2>
      Edit food
    </h2>

    <form action="/modify_food/<%= @the_food.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_food.name %>">
      </div>

      <div>
        <label for="opinion">
          Otheir Opinion
        </label>

        <textarea class="w-100" rows="2" type="text" id="opinion" name="query_opinion"></textarea>
      </div>
      
      <button>
        Update food
      </button>
    </form>
  </div>
</div>

<hr>
